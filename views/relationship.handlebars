<div class="container">
  
<div class="row">  
  <div class="col-md-11">
    <h3 class="relTitle">{{username}} here are all your {{relation}} shows: </h3><br>
  </div>
</div>

<div class="row rel_list justify-content-md">
	<div class="col-md">
		{{#each relationArray}}
			<div class="rel thumbnail float-left text-center">
	    		<img src={{show.imgURL}} class="img-thumbnail" data-id={{show.OMDB_id}} data-type="item" alt="Cinque Terre" data-toggle="modal" data-target="#showModal"><br><p class="titleCaption">{{show.title}}</p><br></a>
		  	</div>
		{{/each}}
	</div>
</div>

<!-- Search Show Modal -->
<!-- Modal -->
<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="showModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">

        <h5 class="modal-title text-center" id="ShowTitle"></h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      </div>

      <div class="modal-body" id="modalTextBox">
        <div class="text-center"><img id="modImage"></div>
		<h5 class="modalInfo">Last Aired</h5>
		<p id="time"></p>
	    <h5 class="modalInfo">Plot</h5>
	    <p id="plot"></p>
      </div>

      <div style="position:relative; padding-bottom:56.25%; overflow:hidden;"><iframe src="https://content.jwplatform.com/players/V7gKg9PI-UbMgy82L.html" width="100%" height="100%" frameborder="0" scrolling="auto" allowfullscreen style="position:absolute;"></iframe></div>

      <div class="modal-footer">
        <button type="button" id="fave-btn" class="btn btn-default add-btn" data-rel="favorite" data-userId={{user_id}} data-showId="0">Add to Favorites</button>
        <button type="button" id="watch-btn" class="btn btn-default add-btn" data-rel="watchlist" data-userId={{user_id}} data-showId="0">Add to Watchlist</button>
      </div>

    </div>
  </div>
</div>
</div>
